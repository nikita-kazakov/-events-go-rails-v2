



<div class="container">
  <div class="row">
    <div class="col">
      <%=render 'shared/errors', object: @event%>
      <%= form_for(@event) do |form|%>
        <div class="form-group">
          <%=form.label :name %>
          <%=form.text_field :name, class:"form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%=form.label :location %>
          <%=form.text_field :location, class:"form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%=form.label :price %>
          <%=form.text_field :price, class:"form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%= form.label "Date" %><br>
          <%= form.datetime_select :starts_at, class:"form-control" %>
        </div>


        <div class="form-group">
          <%=form.label :description %>
          <%=form.text_area :description, class:"form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%=form.label :capacity %>
          <%=form.text_field :capacity, class:"form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%=form.label :image_file_name %>
          <%=form.text_field :image_file_name, class:"form-control", autofocus: true %>
        </div>

        <div class="form-check my-2">

          <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
            <%=b.check_box(class:"form-check-input") %>
            <%=b.label(class:"form-check-label mr-4") %>
          <%end %>

        </div>


        <%=form.submit class:"btn btn-primary" %>
      <%end %>

    </div>
  </div>
</div>
