<div class="container">
  <nav class="row d-flex my-3 justify-content-between">
    <a href="<%=root_path %>" class="logo text-decoration-none">EventRite</a>
    <div class="nav-buttons d-flex">
      <%if current_user_admin? %>
        <%= link_to "Add Event", new_event_path, class:"p-2 text-decoration-none" %>
      <%end %>
      <%= link_to "All Users", users_path, class:"p-2 text-decoration-none" %>
      <a class="p-2 text-decoration-none" href="#">Browse Events</a>
      <a class="p-2 text-decoration-none" href="#">Create Event</a>

      <%if current_user %>
        <%= link_to "My Profile", current_user, class:"p-2 text-decoration-none" %>
        <%= link_to "Sign Out", session_path, method: :delete, class:"p-2 text-decoration-none" %>
      <%else %>
        <%= link_to "Sign Up", signup_path, class:"p-2 text-decoration-none" %>
        <%= link_to "Sign In", new_session_path, class:"p-2 text-decoration-none" %>
      <%end %>

    </div>
  </nav>
</div>