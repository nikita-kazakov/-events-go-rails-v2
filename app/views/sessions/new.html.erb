<div class="container">
  <div class="row">
    <div class="col">
      <h1>Sign in </h1>
      <div class="row">
        <div class="col">
          <%= form_tag(session_path) do%>

            <div class="form-group">
              <%=label_tag :email %>
              <%=email_field_tag :email, nil, class:"form-control"%>
            </div>

            <div class="form-group">
              <%=label_tag :password %>
              <%=password_field_tag :password, nil, class:"form-control" %>
            </div>

            <%=submit_tag 'Sign In', class:"btn btn-primary" %>

          <%end %>
        </div>
      </div>


    </div>
  </div>
</div>
