<div class="container">
  <div class="row">
    <div class="col">

      <h1>List of Users</h1>
      <%@users.each do |user| %>

        <div class="col-lg-4 mb-5">
          <table class="table table-striped">
            <tbody>
            <tr>
              <th scope="row">Name</th>
              <td><%=user.name %></td>
            </tr>

            <tr>
              <th scope="row">Username</th>
              <td><%=user.username %></td>
            </tr>

            <tr>
              <th scope="row">Email</th>
              <td><%=user.email %></td>
            </tr>

            <tr>
              <th scope="row">Member Since</th>
              <td><%=user.created_at.strftime("%B %Y") %></td>
            </tr>


            </tbody>
          </table>
          <%if current_user?(user) %>
            <%=link_to "Details", user_path(user), class:"btn btn-primary mr-2" %>
            <%=link_to "Edit", edit_user_path(user), class:"btn btn-primary mr-2" %>
            <%=link_to "Delete", user_path(user), method: :delete, class:"btn btn-primary" %>
          <%end %>

        </div>

      <%end %>


    </div>
  </div>
</div>

